{
  "permissions": {
    "allow": [
      "Bash(powershell.exe:*)"
    ],
    "deny": [],
    "ask": []
  },
  "environment": {
    "paths": {
      "xampp": "E:\\xampp",
      "xampp_mysql": "E:\\xampp\\mysql\\bin",
      "python": "E:\\python",
      "composer": "E:\\composer",
      "nmap": "E:\\Nmap",
      "putty": "E:\\PuTTY",
      "xmeta": "E:\\XMeta"
    },
    "backupLocations": {
      "general": "E:\\backup",
      "mysql": "E:\\mysql_backups",
      "repositories": "E:\\github"
    },
    "repositories": {
      "baseDir": "E:\\github",
      "current": "E:\\github\\claude_code_baseline"
    }
  },
  "hooks": {
    "pre-read": {
      "pattern": "baseline_docs/*.md",
      "command": "echo 'Reading baseline template - remember to preserve {{TEMPLATE_VARIABLES}}'",
      "enabled": true
    },
    "pre-write": {
      "pattern": "baseline_docs/*.md",
      "command": "powershell -Command \"if ((Get-Content '{{file}}' | Select-String -Pattern '{{[A-Z_]+}}' | Measure-Object).Count -eq 0) { Write-Warning 'No template variables found in {{file}}' }\"",
      "enabled": true
    },
    "post-write": {
      "pattern": "baseline_docs/*.md",
      "command": "powershell -Command \"$lines = (Get-Content '{{file}}' | Measure-Object -Line).Lines; if ($lines -gt 600) { Write-Warning '{{file}} exceeds 600 line limit ($lines lines)' }\"",
      "enabled": true
    }
  },
  "fileWatchers": {
    "tim_wip/markdown/**/*.md": {
      "description": "Source documentation updated - consider regenerating baseline pack",
      "action": "notify"
    },
    "baseline_docs/**/*.md": {
      "description": "Baseline template modified",
      "action": "validate-frontmatter"
    }
  },
  "customCommands": {
    "validate-baseline": {
      "command": "powershell -NoProfile -File .claude/scripts/validate-baseline.ps1",
      "description": "Validate all baseline documentation files"
    },
    "count-templates": {
      "command": "powershell -NoProfile -Command \"(Get-ChildItem baseline_docs -Filter '*.md' | Measure-Object).Count\"",
      "description": "Count baseline documentation files"
    },
    "check-variables": {
      "command": "powershell -NoProfile -Command \"Select-String -Path 'baseline_docs\\*.md' -Pattern '{{[A-Z_]+}}' | Select-Object Filename,Line\"",
      "description": "Find all template variables in baseline docs"
    },
    "generate-index": {
      "command": "powershell -NoProfile -File .claude/scripts/generate-readme-index.ps1",
      "description": "Auto-generate README.md index from baseline files"
    },
    "backup-baseline": {
      "command": "powershell -NoProfile -File .claude/scripts/backup-baseline.ps1",
      "description": "Create timestamped backup of baseline documentation"
    },
    "backup-mysql": {
      "command": "powershell -NoProfile -File .claude/scripts/backup-mysql.ps1",
      "description": "Backup all MySQL databases to E:\\mysql_backups"
    },
    "backup-repos": {
      "command": "powershell -NoProfile -File .claude/scripts/backup-repos.ps1",
      "description": "Backup all GitHub repositories to E:\\backup"
    },
    "check-services": {
      "command": "powershell -NoProfile -File .claude/scripts/check-services.ps1",
      "description": "Check status of XAMPP MySQL, Apache services"
    },
    "list-repos": {
      "command": "powershell -NoProfile -Command \"Get-ChildItem E:\\github -Directory | Select-Object Name,LastWriteTime | Format-Table -AutoSize\"",
      "description": "List all repositories in E:\\github"
    },
    "python-version": {
      "command": "powershell -NoProfile -Command \"& 'E:\\python\\python.exe' --version\"",
      "description": "Check Python version"
    },
    "composer-version": {
      "command": "powershell -NoProfile -Command \"& 'E:\\composer\\composer.bat' --version\"",
      "description": "Check Composer version"
    },
    "mysql-status": {
      "command": "powershell -NoProfile -Command \"& 'E:\\xampp\\mysql\\bin\\mysql.exe' -u root -e 'SHOW DATABASES;'\"",
      "description": "List all MySQL databases"
    }
  },
  "aiAssistantConfig": {
    "readBeforeEditing": [
      "CLAUDE.md",
      "claude-instrctions.md"
    ],
    "templateVariables": {
      "PROJECT_NAME": "{{PROJECT_NAME}}",
      "SERVICE_NAME": "{{SERVICE_NAME}}",
      "REPO_PATH": "{{REPO_PATH}}",
      "CONTACT_EMAIL": "{{CONTACT_EMAIL}}",
      "DOMAIN": "{{DOMAIN}}",
      "DB_HOST": "{{DB_HOST}}",
      "AUTH0_DOMAIN": "{{AUTH0_DOMAIN}}"
    },
    "enforceRules": {
      "preserveTemplateVariables": true,
      "maintainFrontmatter": true,
      "maxFileLines": 600,
      "requireCrossReferences": true
    },
    "autoComplete": {
      "yamlFrontmatter": {
        "title": "{{PROJECT_NAME}} - {{DOCUMENT_PURPOSE}}",
        "version": "1.0",
        "last_updated": "{{DATE}}",
        "author": "TimGolden - aka GoldenEye Engineering"
      }
    }
  },
  "codeQuality": {
    "markdown": {
      "lineLength": 120,
      "listIndent": 2,
      "codeBlockStyle": "fenced",
      "headingStyle": "atx"
    },
    "validation": {
      "checkFrontmatter": true,
      "checkTemplateVariables": true,
      "checkCrossReferences": true,
      "checkCodeBlocks": true
    }
  },
  "backup": {
    "schedule": {
      "mysql": "daily",
      "repositories": "weekly",
      "baseline_docs": "on-change"
    },
    "retention": {
      "mysql": 30,
      "repositories": 90,
      "baseline_docs": 60
    },
    "compression": true,
    "encryption": false
  },
  "tools": {
    "xampp": {
      "mysql": {
        "path": "E:\\xampp\\mysql\\bin\\mysql.exe",
        "dump": "E:\\xampp\\mysql\\bin\\mysqldump.exe",
        "defaultUser": "root",
        "defaultHost": "localhost",
        "defaultPort": 3306
      },
      "apache": {
        "path": "E:\\xampp\\apache\\bin\\httpd.exe",
        "configPath": "E:\\xampp\\apache\\conf\\httpd.conf"
      },
      "php": {
        "path": "E:\\xampp\\php\\php.exe",
        "iniPath": "E:\\xampp\\php\\php.ini"
      }
    },
    "python": {
      "executable": "E:\\python\\python.exe",
      "pip": "E:\\python\\Scripts\\pip.exe",
      "scriptsPath": "E:\\python\\Scripts"
    },
    "composer": {
      "executable": "E:\\composer\\composer.bat",
      "globalPath": "E:\\composer"
    },
    "nmap": {
      "executable": "E:\\Nmap\\nmap.exe",
      "dataPath": "E:\\Nmap"
    }
  },
  "shortcuts": {
    "/validate": "Run validation on all baseline files",
    "/regenerate": "Regenerate baseline pack from source files",
    "/backup": "Create timestamped backup of baseline_docs",
    "/backup-mysql": "Backup all MySQL databases",
    "/backup-repos": "Backup all GitHub repositories",
    "/index": "Generate README.md index",
    "/vars": "Show all template variables in use",
    "/status": "Check XAMPP services status",
    "/repos": "List all GitHub repositories",
    "/tools": "Show installed tool versions"
  }
}
